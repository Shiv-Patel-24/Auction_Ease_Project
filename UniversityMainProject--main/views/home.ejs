<% layout("layouts/boilerplate.ejs") %>

<style>
  :root{
    --ink:#0f172a;
    --muted:#475569;
    --glass: rgba(255,255,255,0.65);
    --glass-strong: rgba(255,255,255,0.82);
    --border: rgba(15,23,42,0.08);
    --card-shadow: 0 18px 50px rgba(2,8,23,.12);
  }

  body{
    background:
      radial-gradient(1000px 600px at 10% -10%, #ffe08a 0%, #ffd1e6 30%, transparent 60%),
      radial-gradient(1200px 800px at 90% -20%, #b9fbc0 0%, #a0c4ff 35%, transparent 70%),
      radial-gradient(1400px 900px at 50% 120%, #c8b6ff 0%, #a7f3d0 40%, #e6f2ff 85%);
    color: var(--ink);
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  }

  .container-narrow{max-width: 1100px;margin: 0 auto;}
  .section{margin: 2rem auto;}
  .glass{
    background: var(--glass);
    backdrop-filter: blur(18px);
    -webkit-backdrop-filter: blur(18px);
    border: 1px solid var(--border);
    border-radius: 24px;
    box-shadow: var(--card-shadow);
  }

  /* HERO */
  .hero{position: relative; padding: clamp(2rem, 5vw, 3rem);}
  .hero-bg{position:absolute; inset:-20%; background:
      radial-gradient(500px 260px at 15% 15%, rgba(59,130,246,.35), transparent 60%),
      radial-gradient(600px 280px at 85% 10%, rgba(16,185,129,.35), transparent 60%),
      radial-gradient(900px 400px at 50% 120%, rgba(244,63,94,.25), transparent 60%);
    filter: blur(24px); z-index:0;}
  .hero-inner{position:relative;z-index:1;text-align:center;}
  .brand{
    font-size: clamp(2.4rem, 6vw, 3.6rem);
    font-weight: 900;
    letter-spacing: -0.02em;
    background: linear-gradient(90deg,#0f172a,#2563eb 30%,#ec4899 60%,#10b981 90%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin: 0;
  }
  .tagline{margin-top:.8rem; color:#111827; font-weight:600; font-size: clamp(1rem,1.6vw,1.15rem);}
  .hero-badges{display:flex;gap:.6rem;flex-wrap:wrap;justify-content:center;margin-top:1rem}
  .badge{padding:.5rem .8rem;border-radius:999px;font-weight:800;background: rgba(255,255,255,0.85);border:1px solid var(--border);color:#111827;}

  /* STRIPS, FEATURES, HOW, TRUST, CTA */
  .color-strip{margin-top:1.25rem;display:grid;grid-template-columns:repeat(4,1fr);gap:.8rem}
  @media (max-width:768px){ .color-strip{grid-template-columns:repeat(2,1fr);} }
  .chip{padding:.9rem 1rem;border-radius:16px;font-weight:800;background:linear-gradient(135deg, rgba(37,99,235,.15), rgba(16,185,129,.15));border:1px solid var(--border);text-align:center;}

  .features{display:grid;grid-template-columns:repeat(auto-fit,minmax(260px,1fr));gap:1rem}
  .feature{padding:1.2rem;border-radius:18px;border:1px solid var(--border);background: var(--glass-strong);backdrop-filter: blur(16px);}
  .feature h3{margin:0;font-weight:900;font-size:1.15rem;color:var(--ink);}
  .feature p{margin:.45rem 0 0;color:var(--muted);}

  .how{display:grid;grid-template-columns:repeat(4,1fr);gap:.9rem}
  @media(max-width:992px){.how{grid-template-columns:repeat(2,1fr);} }
  @media(max-width:560px){.how{grid-template-columns:1fr;} }
  .step{background:var(--glass-strong);border:1px solid var(--border);border-radius:16px;padding:1rem}
  .step h4{margin:0;font-weight:900;color:#0b4a6f}
  .step p{margin:.35rem 0 0;color:#334155}

  .trust{display:grid;grid-template-columns:repeat(3,1fr);gap:.9rem}
  @media(max-width:992px){.trust{grid-template-columns:1fr;} }
  .trust-card{background:var(--glass);border:1px solid var(--border);border-radius:18px;padding:1.1rem}
  .trust-card h4{margin:0;font-weight:900}
  .trust-card p{margin:.3rem 0 0;color:#334155}

  .cta{display:grid;grid-template-columns:1fr auto;gap:.9rem;align-items:center;background:linear-gradient(135deg, rgba(37,99,235,.18), rgba(236,72,153,.18), rgba(16,185,129,.18));border:1px solid var(--border);border-radius:18px;padding:1.1rem}
  @media(max-width:768px){.cta{grid-template-columns:1fr;text-align:center;}}
  .cta h3{margin:0;font-weight:900;}
  .cta a{text-decoration:none;border-radius:12px;padding:.7rem 1rem;font-weight:900;color:#fff;background:linear-gradient(145deg,#111827,#1f2937);}
  .cta a:hover{transform:translateY(-2px);}
  .title{
    font-size:1.55rem;font-weight:900;margin:0 0 .75rem;
    background:linear-gradient(90deg,#0f172a,#2563eb 40%,#ec4899 70%,#10b981 95%);
    -webkit-background-clip:text;-webkit-text-fill-color:transparent;
  }

  /* ====== VISION ====== */
  .vision{padding:1.2rem;}
  .vision p{
    margin: 0;
    color:#0f172a;
    font-size: 1.05rem;
    font-weight: 600;
    line-height: 1.7;
    background: rgba(255,255,255,0.7);
    border: 1px solid var(--border);
    border-radius: 16px;
    padding: 1rem 1.1rem;
  }

  /* ====== FOUNDERS ====== */
  .founders{padding:1.2rem;}
  .founder-grid{
    display:grid;
    grid-template-columns: repeat(4, 1fr);
    gap: .9rem;
  }
  @media(max-width:992px){ .founder-grid{grid-template-columns: repeat(2,1fr);} }
  @media(max-width:560px){ .founder-grid{grid-template-columns: 1fr;} }

  .person{
    background: var(--glass-strong);
    border: 1px solid var(--border);
    border-radius: 18px;
    padding: 1rem;
    text-align: center;
  }
  .avatar-wrap{
    width: 120px; height: 120px; margin: 0 auto .6rem;
    border-radius: 50%;
    background: linear-gradient(135deg, rgba(37,99,235,.25), rgba(236,72,153,.25), rgba(16,185,129,.25));
    padding: 4px;
  }
  .avatar{
    width: 100%; height: 100%;
    border-radius: 50%;
    object-fit: cover;
    display: block;
    background: #fff;
  }
  .name{
    font-weight: 900; color:#0f172a; margin: .25rem 0 0;
    letter-spacing: -.01em;
  }
  .role{ color:#475569; font-weight: 600; font-size: .95rem; margin-top: .15rem; }
</style>

