<% layout("/layouts/boilerplate.ejs") %>

<style>
  .flash-wrapper {
    position: relative;
    animation: slideFade 0.6s ease-out forwards;
    background: rgba(255, 255, 255, 0.07);
    backdrop-filter: blur(14px);
    border-radius: 16px;
    padding: 1.5rem 2rem;
    color: #fff;
    border: 1.5px solid transparent;
    border-image: linear-gradient(120deg, #ff5f6d, #ffc371, #47e4ff, #8e54e9) 1;
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.4);
    overflow: hidden;
  }

  .flash-wrapper p {
    margin: 0;
    font-size: 1.1rem;
    font-weight: 500;
    text-align: center;
    color: #ffffff;
    animation: fadeText 1.5s ease;
  }

  .btn-close-custom {
    position: absolute;
    top: 14px;
    right: 18px;
    background: transparent;
    border: none;
    font-size: 1.3rem;
    color: #fff;
    cursor: pointer;
    transition: transform 0.3s ease, color 0.3s ease;
    z-index: 5;
  }

  .btn-close-custom:hover {
    transform: scale(1.2);
    color: #47e4ff;
  }

  @keyframes slideFade {
    0% {
      transform: translateY(-20px);
      opacity: 0;
    }
    100% {
      transform: translateY(0px);
      opacity: 1;
    }
  }

  @keyframes fadeText {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .flash-wrapper {
      padding: 1rem 1.2rem;
    }

    .flash-wrapper p {
      font-size: 1rem;
    }
  }
</style>

<div class="row mt-4">
  <div class="col-10 col-md-6 offset-1 offset-md-3">
    <div class="flash-wrapper">
      <button type="button" class="btn-close-custom" onclick="this.parentElement.style.display='none';">âœ•</button>
      <p><%= message %></p>
    </div>
  </div>
</div>
